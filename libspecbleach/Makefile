libspecbleach.a:	$(OBJS)
	ar rv libspecbleach.a $(OBJS)
	ranlib libspecbleach.a

.c.o:
	$(COMPILE) -c -o $@ $<


clean:
	-rm -f libspecbleach.a $(OBJS)

